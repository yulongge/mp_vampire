@import '../../towxml/style/main.wxss';

@import '../../towxml/style/theme/light.wxss';

.article_detail_page {
  background-color: #00688B;
  min-height: 100vh;
}
.article_detail_page .con {
  width: 100%;
  overflow-x: hidden;
  padding: 20rpx;
  box-sizing: border-box;
}
.article_detail_page .con::-webkit-scrollbar {
  display: none;
}
.article_detail_page .con .title {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.article_detail_page .con .desc {
  color: #fff;
  font-size: 24rpx;
}
.article_detail_page .con .img {
  width: 100%;
  margin-top: 30rpx;
}
.article_detail_page .con .img image {
  width: 100%;
  border-radius: 10rpx;
}
.article_detail_page .con .content {
  color: #fff;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.article_detail_page .con .content .h2w {
  border-radius: 10rpx;
}
