<view class="view_page">
	<video 
		src="{{src}}"
		controls="{{false}}" 
		poster="https://yulongge.github.io/images/server/article/requestAnimation.jpeg"  
		controls >
	</video>

	<video id="myVideo" 
		src="{{src}}" 
		controls="{{false}}" 
		event-model="bubble">
		<cover-view class="controls">
			<cover-view class="play" bindtap="play">
				<cover-image class="img" src="../../images/pause.png" />
			</cover-view>
			<cover-view class="pause" bindtap="pause">
				<cover-image class="img" src="../../images/play.png" />
			</cover-view>
			<cover-view class="time">00:00</cover-view>
		</cover-view>
	</video>

	<text class="wifitip"> {{isWifi ? '当前在wifi环境下': '当前在用移动网络'}}</text>
	<view class="btn-area">
		<button bindtap="bindButtonTap">获取视频</button>
	</view>
</view>
