.item {
  width: 100%;
  margin: auto;
  margin-top: 40rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.item .img {
  width: 100%;
  border-radius: 10rpx;
}
.item .img image {
  width: 100%;
  border-radius: 10rpx;
  height: unset;
  min-height: 100rpx;
}
.item .msg {
  padding: 20rpx;
}
.item .msg text {
  display: block;
  font-size: 30rpx;
}
.item .msg .name {
  color: #000;
  word-break: break-all;
}
.item .msg .desc {
  font-size: 24rpx;
  color: #999;
  word-break: break-all;
}
