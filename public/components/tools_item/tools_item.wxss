.item {
  width: 100%;
  margin: auto;
  margin-top: 40rpx;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-sizing: border-box;
  display: flex;
}
.item .img {
  width: 100rpx;
}
.item .img image {
  width: 100rpx;
  height: 100%;
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.item .msg {
  flex: 1;
  padding: 20rpx;
}
.item .msg text {
  display: block;
  font-size: 30rpx;
}
.item .msg .name {
  color: #000;
}
.item .msg .desc {
  font-size: 24rpx;
  color: #999;
}
